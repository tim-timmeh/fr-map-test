<body>

<div id="map" style="width: 100%; height: 100%">






	<script src="leaflet.js"></script>
	<script src="https://leaflet.github.io/Leaflet.draw/leaflet.draw.js"></script>

	<script>

		
		var mbAttr = 'Test',
			mbUrl = 'TheMap/{z}/{z}-{x}-{y}.jpg';
			mbTextUrl = 'faerun-world-names/{z}/{z}-{x}-{y}-text.png';
			mbGridUrl = 'faerun-world-blank/{z}-grid.png';
			
	    var baselayer   = L.tileLayer(mbUrl, {
	    	
	    	maxZoom: 10,

			attribution: mbAttr,
			
			maxNativeZoom: 8,

			id: 'TESTID',
			
			zoomOffset: 0,
			
			noWrap: true,
			
			detectRetina: true,
			
			continuousWorld: false,});
			
		
		var map = L.map('map', {
		    center:[34, -60],
		    zoom: 7,
		    layers: [baselayer]
		    });


		var baseLayers = {
			"Baselayer": baselayer
		};
		
		var overlays = {
			"Cities": cities,
			"Small Cities": citiesSmall,
			"Large Towns": townsLarge,
			"Small Towns": townsSmall,
			"Villages": villages,
			"Ruins": ruins,
			"Roads": roads,
			"Grid": gridlayer,
			"Text layer": textlayer,
			"Corrections": corrections
		};

		
		L.control.scale().addTo(map);

		L.control.layers(baseLayers, overlays, {collapsed: true}).addTo(map);






		var popup = L.popup();

		function onMapClick(e) {

			popup

				.setLatLng(e.latlng)
				
				
				.setContent("test comment click")

				.openOn(map);

		}

		
		
map.on('click', onMapClick);



	</script>




	
	</body>
</html>
